@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<h1 class="text-center">კონტაქტი</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card card-body">
            <img src="~/images/bddbb3b5-24e7-48af-8250-b356d3127662_SK-A-3138.jpg" height="700" />
        </div>
    </div>
    <div class="col-md-6">

        

        <div class="card card-body bg-light">
            <form method="post">
                <div asp-validation-summary="All" class="text-warning"></div>
                <div class="form-group">
                    <label asp-for="Name">თქვენი სახელი:</label>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Email">თქვენი მეილი:</label>

                    <input type="email" asp-for="Email" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Subject">თემა:</label>
                    <input type="text" asp-for="Subject" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Message">ტექსტი:</label>
                    <textarea asp-for="Message" rows="4" class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" value="გაგზავნა" class="btn btn-primary">გაგზავნა</button>
                    <div>@ViewBag.UserMessage</div>
                </div>
            </form>
        </div>

    </div>
</div>